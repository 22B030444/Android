<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextTab">
        <item name="android:textColor">@color/tn_text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextTabSelected" parent="TextTab">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tn_green</item>
        <item name="android:background">@drawable/bg_tab_selected</item>
    </style>
</resources>
